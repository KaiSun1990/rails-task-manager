<%= form_for(@task) do |f| %>
  <div class="container">
    <h1>Edit Task</h1>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="checkbox">
      <%= f.check_box :completed %>
      <%= f.label :completed, "Task completed?" %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
