<div class="container">
  <h1>My Tasks</h1>
  <div class="flex-container">
    <% @tasks.each do |task| %>
      <div class="task-container">
        <h2><%= task.title %></h2>
        <%= link_to "details", task_path(task.id) %>
        <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        <p>Completed? : <%= task.completed %></p>
      </div>
    <% end %>
    <%= link_to "Add a new task", new_path %>
  </div>
</div>
